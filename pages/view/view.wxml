<!-- 1. view 基本使用 -->
<view>哈哈哈</view>
<view>哈哈哈</view>

<!-- 2. hover-class  指定按下去的样式类   hover-class="none" 时，没有点击态效果 -->
<!-- hover-start-time  默认值 50     按住后多久出现点击态  毫秒-->
<!-- hover-stay-time  默认值  400  手指松开后点击态保留时间  毫秒-->
<!-- hover-stop-propagation  阻止祖先元素出现点击态 -->
<view class="box1" hover-class='hover-box1'>
  <view class="box2" hover-class='hover-box2' hover-stop-propagation hover-start-time='0' hover-stay-time='0'>
    嗯嗯嗯
  </view>
</view>